//uint8_t LED_State = 0;
extern uint8_t TxData[8];

extern volatile uint8_t  usb_rx_ready;
extern volatile uint32_t usb_rx_len;
extern uint8_t usb_rx_data[1024];

extern USBD_HandleTypeDef hUsbDeviceFS;
/* USER CODE END PV */

